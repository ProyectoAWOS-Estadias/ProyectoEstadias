extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-green-800 Estadias 
          span.font-normal TIC 
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10")
            form.space-y-5
                div.space-y-5
                    h3.text-lg.leading-10.font-medium.text-gray-900 Aqui hay un mapa


                    div.border-gray-200.border-t.py-5.space-y-5
